
@{
    ViewData["Title"] = "Formulario";
}
    <h2>Formulario</h2>
    <fieldset>
        <legend>Registro de Productos</legend>
        @using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            <div class="form-group">
                <span class="col-md-2">
                    Codigo Producto
                </span>
                <span class="col-md-6">
                    @Html.TextBox("diio", null, new { @class = "form-control", placeholder = "Codigo Identificador" })
                </span>
            </div>
            <div class="form-group">
                <span class="col-md-2">
                    Insumo
                </span>
                <span class="col-md-6">
                    @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "Nombre" })
                </span>
            </div>
            <div class="form-group">
                <span class="col-md-2">
                    Temporada
                </span>
                <span class="col-md-6">
                    @Html.TextBox("temporada", null, new { @class = "form-control", placeholder = "Temporada" })
                </span>
            </div>
            
            <div class="form-group">
                <span class="col-md-2">
                    Tipo
                </span>
                <span class="col-md-6">
                    @Html.DropDownList("tipo", new List<SelectListItem>
            {
                new SelectListItem{Text="", Value=""},
                new SelectListItem{Text="Conserva", Value="Conserva"},
                new SelectListItem{Text="Mermelada", Value="Mermelada"},
                new SelectListItem{Text="Licor", Value="Licor"}                
            },
            new { @class = "form-control" }
            )
                </span>
            </div>
            <div class="form-group">
                <span class="col-md-2">
                    Cantidad
                </span>
                <span class="col-md-6">
                    @Html.TextBox("cantidad", null, new { @class = "form-control", placeholder = "Unidades" })
                </span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
    }

</fieldset>
